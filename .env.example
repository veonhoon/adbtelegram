# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here

# Server Configuration
SERVER_ID=server-1
SERVER_NAME=Main Server

# Monitoring Configuration
CHECK_INTERVAL_SECONDS=30

# Database Configuration
# For multi-server: Point all servers to the same database file
# Example (Windows): DB_PATH=\\\\MainServer\\shared\\adb_tracker.db
# Example (Linux): DB_PATH=/mnt/shared/adb_tracker.db
# Leave empty to use local ./adb_tracker.db
DB_PATH=

# Mode: 'standalone' or 'agent'
# standalone: Runs both monitor and bot in one process (ONE server only, or main server with shared DB)
# agent: Only runs monitor, reports to central bot via shared DB (additional servers)
MODE=standalone
